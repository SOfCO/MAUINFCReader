<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFC_Reader.MainPage">

    
    <StackLayout Spacing="20" Padding="15">
       <Label Text="NFC Data:" FontSize="Medium"/>
       <Label x:Name="NfcDataLabel" Text="Waiting for NFC..." FontSize="Small"/>
       <Button Text="Start NFC" Clicked="OnStartNfcClicked"/>
          <Label x:Name="StatusLabel" FontSize="16" TextColor="Green" HorizontalOptions="CenterAndExpand" Margin="10"/>
   </StackLayout>
   

</ContentPage>
